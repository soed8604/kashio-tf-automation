pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        EKS_CLUSTER_NAME = 'kashio-eks-cluster'
        AWS_CREDENTIALS = credentials('aws_credentials')
    }
    stages {
        stage('Checkout') {
            steps {
                // Clonar el repositorio Git
                git branch: 'master', url: 'https://github.com/soed8604/kashio-tf-automation.git'
                // Ejecutar comandos dentro del directorio clonado
                sh '''
                    cd Kashio-cluster-EKS/app.votacion.2
                    ls -la
                    cat jenkinsfile
                '''
            }
        }
        stage('Deploy to EKS') {
            steps {
                script {
                    // Configurar credenciales IAM
                    withAWS(role: 'arn:aws:iam::654654264692:role/jenkins-eks-role') {
                        sh 'aws eks --region $AWS_DEFAULT_REGION update-kubeconfig --name $EKS_CLUSTER_NAME'
                        sh 'kubectl apply -f postgresdp.yml'
                        sh 'kubectl apply -f redisdp.yml'
                        sh 'kubectl apply -f resuldp.yml'
                        sh 'kubectl apply -f servicepostgres.yml'
                        sh 'kubectl apply -f serviceredis.yml'
                        sh 'kubectl apply -f serviceresult.yml'
                        sh 'kubectl apply -f servicevote.yml'
                        sh 'kubectl apply -f votedp.yml'
                        sh 'kubectl apply -f workerdp.yml'
                    }
                }
            }
        }
    }
}

